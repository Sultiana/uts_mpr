<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Gulai Ayam"
        android:textAlignment="center"
        android:textColor="#111111"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/resep_ayam_gulai_satu_lagi_pilihan_menu_utama_buka_puasa_1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bahan - Bahan :"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6 siung bawang merah, 3 butir kemiri sangrai, 3 cm kunyit, 1 sdm ketumbar, 3 siung Bawang Putih, 5 buah cabai rawit,
4 cm lengkuas muda, 3 cm jahe, 1 sdt lada bubuk, 10 cabai merah keriting."
                android:textSize="22dp" />

            <TextView
                android:id="@id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cara Membuat :"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cuci bersih ayam, kemudian kucuri jeruk nipis,
Setelah itu diamkan ayam selama 10 menit,
Tumis bumbu halus, masukkan daun salam, daun jeruk, dan sereh,
Kemudian aduk hingga mengeluarkan aroma wangi,
Masukkan ayam, masak sampai berubah warna,
Beri garam dan kaldu, lalu aduk hingga rata,
Tuang santan encer dan air,
Kemudian masak sampai ayam empuk,
Tunggu sampai kuah menyusut dan ayam empuk,
Tuang santan kental,
Masak sambil terus diaduk sampai santan mendidih,
Tunggu beberapa saat hingga ayam gulai matang,
Sajikan ketika masih hangat."
                android:textSize="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Berikan Komentarmu :"
                android:textSize="22dp"
                android:textColor="#111111"/>

            <EditText
                android:id="@+id/edit1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Simpan dan Kembali"
                android:onClick="kembali1" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>